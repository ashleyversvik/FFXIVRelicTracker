                <Button Style="{StaticResource RotateSummaryButton}" Grid.Row="7" Grid.Column="03" Content="{Binding Path=ARM.Skybuilders.Progress}" Tag="ARM.Skybuilders" />
                <Button Style="{StaticResource RotateSummaryButton}" Grid.Row="7" Grid.Column="04" Content="{Binding Path=GSM.Skybuilders.Progress}" Tag="GSM.Skybuilders" />
                <Button Style="{StaticResource RotateSummaryButton}" Grid.Row="7" Grid.Column="05" Content="{Binding Path=LTW.Skybuilders.Progress}" Tag="LTW.Skybuilders" />
                <Button Style="{StaticResource RotateSummaryButton}" Grid.Row="7" Grid.Column="06" Content="{Binding Path=WVR.Skybuilders.Progress}" Tag="WVR.Skybuilders" />
