<UserControl x:Class="FFXIVRelicTracker._02_ARR._04_Animus.AnimusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFXIVRelicTracker._02_ARR._04_Animus"
             xmlns:helper="clr-namespace:FFXIVRelicTracker.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FFXIVRelicTracker;component/Helpers/ResourceDictionaries/ArrDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Style="{StaticResource LeftTextBlock}" Text="Active Job:"/>
            <ComboBox   x:Name="ArrAnimusJob" Style="{StaticResource FFXIVComboBox}" Margin="5,0,0,0"
                                                ItemsSource="{Binding   Path=AvailableJobs}" 
                                                SelectedItem="{Binding Path=SelectedJob}"
                                    />
            <Border HorizontalAlignment="Center">
                <Button Style="{StaticResource FFXIVButton}" Content="Mark as completed" Command="{Binding CompleteButton}" CommandParameter="{Binding Path=SelectedJob}"/>
            </Border>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible"  HorizontalScrollBarVisibility="Auto" Padding="0,0,5,0">
            <Grid VerticalAlignment="Top" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
               

                <TextBlock Grid.Row="1" Style="{StaticResource LeftTextBlock}" TextWrapping="Wrap"     Text="Quest: Trials of the Braves | Started by: Jalzahn"/>


                <Grid   Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="auto" />
                        <ColumnDefinition   Width="auto"/>
                        <ColumnDefinition   Width="auto"/>
                        <ColumnDefinition   Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Style="{StaticResource LeftTextBlock}"  Text="Complete the following Zodiac Braves Books"   Grid.ColumnSpan="10"/>
                    <TextBlock Margin="5,0,0,0" Grid.Row="1" Style="{StaticResource LeftTextBlock}"  
                               Text="Purchase books from G'jusana in Mor Dhona for 100 Poetics each"   Grid.ColumnSpan="10"/>
                    <TextBlock Margin="5,0,0,0" Grid.Row="2" Style="{StaticResource LeftTextBlock}"  
                               Text="One book may be active at a time"   Grid.ColumnSpan="10"/>

                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="3"     Grid.Column="0" Text="Book of Skyfire I"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="4"     Grid.Column="0" Text="Book of Skyfire II"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="5"     Grid.Column="0" Text="Book of Netherfire I"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="6"     Grid.Column="0" Text="Book of Skyfall I"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="7"     Grid.Column="0" Text="Book of Skyfall II"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="8"     Grid.Column="0" Text="Book of Netherfall I"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="9"     Grid.Column="0" Text="Book of Skywind I"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="10"     Grid.Column="0" Text="Book of Skywind II"/>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource LeftTextBlock}" Grid.Row="11"    Grid.Column="0" Text="Book of Skyearth I"/>

                    <CheckBox Grid.Row="3"    Grid.Column="1" IsChecked="{Binding Path=SkyFire1Book   }"/>
                    <CheckBox Grid.Row="4"    Grid.Column="1" IsChecked="{Binding Path=SkyFire2Book   }"/>
                    <CheckBox Grid.Row="5"    Grid.Column="1" IsChecked="{Binding Path=NetherFire1Book}"/>
                    <CheckBox Grid.Row="6"    Grid.Column="1" IsChecked="{Binding Path=SkyFall1Book   }"/>
                    <CheckBox Grid.Row="7"    Grid.Column="1" IsChecked="{Binding Path=SkyFall2Book   }"/>
                    <CheckBox Grid.Row="8"    Grid.Column="1" IsChecked="{Binding Path=NetherFall1Book}"/>
                    <CheckBox Grid.Row="9"    Grid.Column="1" IsChecked="{Binding Path=SkyWind1Book   }"/>
                    <CheckBox Grid.Row="10"    Grid.Column="1" IsChecked="{Binding Path=SkyWind2Book   }"/>
                    <CheckBox Grid.Row="11"    Grid.Column="1" IsChecked="{Binding Path=SkyEarth1Book  }"/>

                    <TextBlock Grid.Row="12"/>


                </Grid>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource LeftTextBlock}" Text="Selected Book"/>
                    <ComboBox Style="{StaticResource FFXIVComboBox}" ItemsSource="{Binding Path=AnimusBooks}"
                                                  SelectedItem="{Binding CurrentBook, Mode=TwoWay}"
                                                  SelectedIndex="{Binding BookSelection}"/>

                </StackPanel>
                <StackPanel Grid.Row="5" Visibility="{Binding Path=ShowBookItems,Converter={StaticResource b2v}}">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition   Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border Background="#313131"  Grid.Row="0" Grid.Column="0" Grid.RowSpan="23" Grid.ColumnSpan="2"   BorderThickness="2" CornerRadius="10" BorderBrush="#725e38">
                            <Border BorderBrush="#957a4c"  BorderThickness="2" CornerRadius="10">
                                <Border BorderBrush="OrangeRed"  BorderThickness="2" CornerRadius="10">
                                    <Border CornerRadius="10" BorderThickness="3" BorderBrush="#413b2f" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Defeat 3 each of the following Beastmen:"/>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="1"  Grid.Column="1" TextDecorations="{Binding Path=Creature1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature1.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="3"  Grid.Column="1" TextDecorations="{Binding Path=Creature2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature2.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="5"  Grid.Column="1" TextDecorations="{Binding Path=Creature3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature3.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="7"  Grid.Column="1" TextDecorations="{Binding Path=Creature4.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature4.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="9"  Grid.Column="1" TextDecorations="{Binding Path=Creature5.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature5.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="11" Grid.Column="1" TextDecorations="{Binding Path=Creature6.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature6.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="13" Grid.Column="1" TextDecorations="{Binding Path=Creature7.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature7.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="15" Grid.Column="1" TextDecorations="{Binding Path=Creature8.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature8.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="17" Grid.Column="1" TextDecorations="{Binding Path=Creature9.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature9.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="19" Grid.Column="1" TextDecorations="{Binding Path=Creature10.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Creature10.Name}"/>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="2"  Grid.Column="1" TextDecorations="{Binding Path=Creature1.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature1.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="4"  Grid.Column="1" TextDecorations="{Binding Path=Creature2.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature2.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="6"  Grid.Column="1" TextDecorations="{Binding Path=Creature3.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature3.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="8"  Grid.Column="1" TextDecorations="{Binding Path=Creature4.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature4.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="10" Grid.Column="1" TextDecorations="{Binding Path=Creature5.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature5.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="12" Grid.Column="1" TextDecorations="{Binding Path=Creature6.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature6.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="14" Grid.Column="1" TextDecorations="{Binding Path=Creature7.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature7.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="16" Grid.Column="1" TextDecorations="{Binding Path=Creature8.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature8.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="18" Grid.Column="1" TextDecorations="{Binding Path=Creature9.Completed.Bool,  Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature9.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="20" Grid.Column="1" TextDecorations="{Binding Path=Creature10.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Creature10.Map}"/>

                                            <CheckBox   Grid.Row="1"      Grid.Column="2"   IsChecked="{Binding CreatureBool1}"/>
                                            <CheckBox   Grid.Row="3"      Grid.Column="2"   IsChecked="{Binding CreatureBool2}"/>
                                            <CheckBox   Grid.Row="5"      Grid.Column="2"   IsChecked="{Binding CreatureBool3}"/>
                                            <CheckBox   Grid.Row="7"      Grid.Column="2"   IsChecked="{Binding CreatureBool4}"/>
                                            <CheckBox   Grid.Row="9"      Grid.Column="2"   IsChecked="{Binding CreatureBool5}"/>
                                            <CheckBox   Grid.Row="11"     Grid.Column="2"   IsChecked="{Binding CreatureBool6}"/>
                                            <CheckBox   Grid.Row="13"     Grid.Column="2"   IsChecked="{Binding CreatureBool7}"/>
                                            <CheckBox   Grid.Row="15"     Grid.Column="2"   IsChecked="{Binding CreatureBool8}"/>
                                            <CheckBox   Grid.Row="17"     Grid.Column="2"   IsChecked="{Binding CreatureBool9}"/>
                                            <CheckBox   Grid.Row="19"     Grid.Column="2"   IsChecked="{Binding CreatureBool10}"/>



                                        </Grid>
                                    </Border>
                                </Border>
                            </Border>
                        </Border>

                        <Border Background="#313131"  Grid.Row="0" Grid.Column="2" Grid.RowSpan="7" Grid.ColumnSpan="2"   BorderThickness="2" CornerRadius="10" BorderBrush="#725e38">
                            <Border BorderBrush="#957a4c"  BorderThickness="2" CornerRadius="10">
                                <Border BorderBrush="Purple"  BorderThickness="2" CornerRadius="10">
                                    <Border CornerRadius="10" BorderThickness="3" BorderBrush="#413b2f" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Text="Complete the following FATEs:"/>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="5"    Grid.Column="1"   TextDecorations="{Binding Path=Fate3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Fate3.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="3"    Grid.Column="1"   TextDecorations="{Binding Path=Fate2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Fate2.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="1"    Grid.Column="1"   TextDecorations="{Binding Path=Fate1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Fate1.Name}"/>


                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="6"    Grid.Column="1"   TextDecorations="{Binding Path=Fate3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Fate3.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="4"    Grid.Column="1"   TextDecorations="{Binding Path=Fate2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Fate2.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="2"    Grid.Column="1"   TextDecorations="{Binding Path=Fate1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Fate1.Map}"/>

                                            <CheckBox Grid.Row="5"    Grid.Column="2"   IsChecked="{Binding Path=FateBool3}"/>
                                            <CheckBox Grid.Row="3"    Grid.Column="2"   IsChecked="{Binding Path=FateBool2}"/>
                                            <CheckBox Grid.Row="1"    Grid.Column="2"   IsChecked="{Binding Path=FateBool1}"/>
                                        </Grid>
                                    </Border>
                                </Border>
                            </Border>
                        </Border>

                        <Border Background="#313131"  Grid.Row="7" Grid.Column="2" Grid.RowSpan="15" Grid.ColumnSpan="2"   BorderThickness="2" CornerRadius="10" BorderBrush="#725e38">
                            <Border BorderBrush="#957a4c"  BorderThickness="2" CornerRadius="10">
                                <Border BorderBrush="Blue"  BorderThickness="2" CornerRadius="10">
                                    <Border CornerRadius="10" BorderThickness="3" BorderBrush="#413b2f" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Text="Complete the following Leves:"/>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="1"      Grid.Column="1"   TextDecorations="{Binding Path=Leve1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Leve1.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="5"      Grid.Column="1"   TextDecorations="{Binding Path=Leve2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Leve2.Name}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="9"      Grid.Column="1"   TextDecorations="{Binding Path=Leve3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Leve3.Name}"/>


                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="2"      Grid.Column="1"   TextDecorations="{Binding Path=Leve1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve1.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="6"      Grid.Column="1"   TextDecorations="{Binding Path=Leve2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve2.Map}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="10"     Grid.Column="1"   TextDecorations="{Binding Path=Leve3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve3.Map}"/>

                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="3"      Grid.Column="1"   TextDecorations="{Binding Path=Leve1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve1.Person}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="7"      Grid.Column="1"   TextDecorations="{Binding Path=Leve2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve2.Person}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="11"     Grid.Column="1"   TextDecorations="{Binding Path=Leve3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve3.Person}"/>


                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="4"      Grid.Column="1"   TextDecorations="{Binding Path=Leve1.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve1.Type}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="8"      Grid.Column="1"   TextDecorations="{Binding Path=Leve2.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve2.Type}"/>
                                            <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="12"     Grid.Column="1"   TextDecorations="{Binding Path=Leve3.Completed.Bool, Converter={StaticResource ConvertToStrikethrough}}" Margin="10,0,0,0" Text="{Binding Path=Leve3.Type}"/>

                                            <CheckBox   Grid.Row="1"    Grid.Column="2"   IsChecked="{Binding LeveBool1}"/>
                                            <CheckBox   Grid.Row="5"    Grid.Column="2"   IsChecked="{Binding LeveBool2}"/>
                                            <CheckBox   Grid.Row="9"    Grid.Column="2"   IsChecked="{Binding LeveBool3}"/>

                                        </Grid>
                                    </Border>
                                </Border>
                            </Border>
                        </Border>

                        <Border Style="{StaticResource GoldBorder}" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{StaticResource LeftTextBlock}" Grid.ColumnSpan="2"    Grid.Row="0" Text="Complete the following Dungeons:"/>

                                <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="1" TextDecorations="{Binding Path=CompletedDungeon1, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Dungeon1}"/>
                                <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="2" TextDecorations="{Binding Path=CompletedDungeon2, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Dungeon2}"/>
                                <TextBlock Style="{StaticResource LeftTextBlock}" Grid.Row="3" TextDecorations="{Binding Path=CompletedDungeon3, Converter={StaticResource ConvertToStrikethrough}}"  Text="{Binding Path=Dungeon3}"/>

                                <CheckBox  Grid.Row="1"    Grid.Column="1"   IsChecked="{Binding Path=CompletedDungeon1}"/>
                                <CheckBox  Grid.Row="2"    Grid.Column="1"   IsChecked="{Binding Path=CompletedDungeon2}"/>
                                <CheckBox  Grid.Row="3"    Grid.Column="1"   IsChecked="{Binding Path=CompletedDungeon3}"/>

                                
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource GoldBorder}" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{StaticResource LeftTextBlock}" Margin="0,0,10,0" Text="Available Maps:"/>

                                <helper:DataBoundRadioButton Grid.Row="1" Style="{StaticResource RadioButtonStyle}"  Content="{Binding Path=PossibleMap1}"  Visibility="{Binding Path=PossibleVisibility1,Converter={StaticResource b2v}}"  IsChecked="{Binding Path=PossibleChecked1}"    Command="{Binding AnimusRadioButton}" CommandParameter="{Binding Path=PossibleMap1}" />
                                <helper:DataBoundRadioButton Grid.Row="2" Style="{StaticResource RadioButtonStyle}"  Content="{Binding Path=PossibleMap2}"  Visibility="{Binding Path=PossibleVisibility2,Converter={StaticResource b2v}}"  IsChecked="{Binding Path=PossibleChecked2}"    Command="{Binding AnimusRadioButton}" CommandParameter="{Binding Path=PossibleMap2}" />
                                <helper:DataBoundRadioButton Grid.Row="3" Style="{StaticResource RadioButtonStyle}"  Content="{Binding Path=PossibleMap3}"  Visibility="{Binding Path=PossibleVisibility3,Converter={StaticResource b2v}}"  IsChecked="{Binding Path=PossibleChecked3}"    Command="{Binding AnimusRadioButton}" CommandParameter="{Binding Path=PossibleMap3}" />
                                <helper:DataBoundRadioButton Grid.Row="4" Style="{StaticResource RadioButtonStyle}"  Content="{Binding Path=PossibleMap4}"  Visibility="{Binding Path=PossibleVisibility4,Converter={StaticResource b2v}}"  IsChecked="{Binding Path=PossibleChecked4}"    Command="{Binding AnimusRadioButton}" CommandParameter="{Binding Path=PossibleMap4}" />
                                <helper:DataBoundRadioButton Grid.Row="5" Style="{StaticResource RadioButtonStyle}"  Content="{Binding Path=PossibleMap5}"  Visibility="{Binding Path=PossibleVisibility5,Converter={StaticResource b2v}}"  IsChecked="{Binding Path=PossibleChecked5}"    Command="{Binding AnimusRadioButton}" CommandParameter="{Binding Path=PossibleMap5}" />
